	keywords = {Access point (AP) selection, Calibration, Fingerprint recognition, Fixtures, IP networks, Internet of Things, Internet of Things (IoT), Optimization, Wireless fidelity, indoor WiFi positioning, multiobjective optimization, self-adaptive algorithm},
