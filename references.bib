	journal = {Journal of Cultural Heritage Management and Sustainable Development},
	author = {Rodríguez, María Victoria Rosique and Ruiz-Santaella, Carmen de-Prado and Barbudo, María Ángeles Jordano},
	month = feb,
	year = {2024},
	note = {Publisher: Emerald Publishing Limited},
